<% content_for :title, @product.name %>

<div class="max-w-2xl">
  <div class="mb-6">
    <%= link_to products_path, class: "inline-flex items-center gap-2 text-text-secondary hover:text-text-primary transition-colors duration-150" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
      Back to inventory
    <% end %>
  </div>

  <% if notice.present? %>
    <div class="py-3 px-4 bg-accent-green/10 border-l-4 border-accent-green mb-5 text-text-primary rounded-lg" id="notice">
      <%= notice %>
    </div>
  <% end %>

  <div class="bg-dark-800 border border-dark-600 rounded-xl overflow-hidden">
    <!-- Image -->
    <div class="aspect-video bg-dark-700">
      <% if @product.image.attached? %>
        <%= image_tag @product.image, class: "w-full h-full object-cover" %>
      <% else %>
        <div class="w-full h-full flex items-center justify-center text-text-secondary">
          <svg class="w-20 h-20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
        </div>
      <% end %>
    </div>

    <!-- Content -->
    <div class="p-6">
      <div class="flex justify-between items-start mb-4">
        <div>
          <h1 class="font-bold text-2xl text-text-primary"><%= @product.name %></h1>
          <p class="text-text-secondary mt-1"><%= @product.description.presence || "No description" %></p>
        </div>
        <% if @product.quantity == 0 %>
          <span class="px-3 py-1 bg-accent-red/10 text-accent-red text-sm font-medium rounded-full">OUT OF STOCK</span>
        <% elsif @product.low_stock? %>
          <span class="px-3 py-1 bg-accent-amber/10 text-accent-amber text-sm font-medium rounded-full">LOW STOCK</span>
        <% else %>
          <span class="px-3 py-1 bg-accent-green/10 text-accent-green text-sm font-medium rounded-full">IN STOCK</span>
        <% end %>
      </div>

      <div class="flex items-center justify-between py-4 border-t border-b border-dark-600">
        <div>
          <p class="text-text-secondary text-sm">Price</p>
          <p class="text-3xl font-bold text-text-primary"><%= number_to_currency(@product.price) %></p>
        </div>

        <div class="flex items-center gap-4">
          <%= button_to decrease_stock_product_path(@product), method: :post, class: "w-10 h-10 flex items-center justify-center bg-dark-700 hover:bg-dark-600 border border-dark-600 rounded-lg text-text-secondary hover:text-text-primary cursor-pointer transition-colors duration-150 disabled:opacity-50", disabled: @product.quantity == 0 do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"/>
            </svg>
          <% end %>

          <span class="text-2xl font-bold w-16 text-center <%= @product.low_stock? ? 'text-accent-amber' : 'text-text-primary' %>">
            <%= @product.quantity %>
          </span>

          <%= button_to increase_stock_product_path(@product), method: :post, class: "w-10 h-10 flex items-center justify-center bg-dark-700 hover:bg-dark-600 border border-dark-600 rounded-lg text-text-secondary hover:text-text-primary cursor-pointer transition-colors duration-150" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
          <% end %>
        </div>
      </div>

      <div class="grid grid-cols-2 gap-4 py-4 border-b border-dark-600">
        <div>
          <p class="text-text-secondary text-sm">Total Value</p>
          <p class="text-xl font-semibold text-text-primary"><%= number_to_currency(@product.price * @product.quantity) %></p>
        </div>
        <div>
          <p class="text-text-secondary text-sm">Stock Level</p>
          <p class="text-xl font-semibold <%= @product.low_stock? ? 'text-accent-amber' : 'text-accent-green' %>"><%= @product.quantity %> units</p>
        </div>
      </div>

      <div class="flex items-center gap-4 mt-6">
        <%= link_to edit_product_path(@product), class: "flex-1 text-center px-4 py-3 bg-dark-700 hover:bg-dark-600 border border-dark-600 rounded-lg text-text-primary font-medium transition-colors duration-150" do %>
          Edit Product
        <% end %>
        <%= button_to @product, method: :delete, class: "px-4 py-3 bg-accent-red hover:bg-accent-red/80 rounded-lg text-white font-medium cursor-pointer transition-colors duration-150", data: { turbo_confirm: "Are you sure you want to delete #{@product.name}?" } do %>
          Delete
        <% end %>
      </div>
    </div>
  </div>
</div>
