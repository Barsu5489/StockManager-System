<% content_for :title, "Inventory" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% if alert.present? %>
    <p class="py-2 px-3 bg-red-50 mb-5 text-red-500 font-medium rounded-md inline-block" id="alert"><%= alert %></p>
  <% end %>

  <% if @low_stock_products.any? %>
    <div id="low-stock-alert" class="bg-amber-50 border border-amber-200 rounded-lg p-4 mb-6">
      <div class="flex items-center">
        <span class="text-amber-600 text-xl mr-2">âš </span>
        <div>
          <h3 class="font-semibold text-amber-800">Low Stock Alert</h3>
          <p class="text-amber-700 text-sm">
            <%= @low_stock_products.count %> product(s) below threshold (<%= Product::LOW_STOCK_THRESHOLD %> units):
            <strong><%= @low_stock_products.pluck(:name).join(", ") %></strong>
          </p>
        </div>
      </div>
    </div>
  <% end %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-4xl">Inventory</h1>
    <%= link_to "New product", new_product_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="products" class="space-y-4">
    <% if @products.any? %>
      <% @products.each do |product| %>
        <div class="flex items-center gap-4">
          <div class="flex-1">
            <%= render product %>
          </div>
          <div class="flex flex-col space-y-2">
            <%= link_to "Edit", edit_product_path(product), class: "text-center rounded-md px-3 py-2 bg-gray-100 hover:bg-gray-50 font-medium text-sm" %>
            <%= button_to "Delete", product, method: :delete, class: "rounded-md px-3 py-2 text-white bg-red-600 hover:bg-red-500 font-medium text-sm cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10 text-gray-500">No products found. Add your first product!</p>
    <% end %>
  </div>
</div>
