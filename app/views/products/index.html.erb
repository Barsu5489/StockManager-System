<% content_for :title, "Inventory" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% if alert.present? %>
    <p class="py-2 px-3 bg-red-50 mb-5 text-red-500 font-medium rounded-md inline-block" id="alert"><%= alert %></p>
  <% end %>

  <%= render "low_stock_alert", low_stock_products: @low_stock_products %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-4xl">Inventory</h1>
    <%= link_to "New product", new_product_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div class="mb-6 flex gap-4 items-center">
    <%= form_with url: products_path, method: :get, class: "flex-1 flex gap-2" do |f| %>
      <%= f.text_field :query, value: params[:query], placeholder: "Search products...", class: "flex-1 rounded-md border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      <%= f.submit "Search", class: "rounded-md px-4 py-2 bg-gray-600 hover:bg-gray-500 text-white font-medium cursor-pointer" %>
      <% if params[:query].present? || params[:filter].present? %>
        <%= link_to "Clear", products_path, class: "rounded-md px-4 py-2 bg-gray-200 hover:bg-gray-100 font-medium" %>
      <% end %>
    <% end %>

    <div class="flex gap-2">
      <%= link_to "All", products_path, class: "rounded-md px-3 py-2 #{params[:filter].blank? ? 'bg-blue-600 text-white' : 'bg-gray-200'} font-medium text-sm" %>
      <%= link_to "Low Stock", products_path(filter: "low_stock"), class: "rounded-md px-3 py-2 #{params[:filter] == 'low_stock' ? 'bg-amber-600 text-white' : 'bg-gray-200'} font-medium text-sm" %>
    </div>
  </div>

  <div id="products" class="space-y-4">
    <% if @products.any? %>
      <% @products.each do |product| %>
        <div class="flex items-center gap-4">
          <div class="flex-1">
            <%= render product %>
          </div>
          <div class="flex flex-col space-y-2">
            <%= link_to "Edit", edit_product_path(product), class: "text-center rounded-md px-3 py-2 bg-gray-100 hover:bg-gray-50 font-medium text-sm" %>
            <%= button_to "Delete", product, method: :delete, class: "rounded-md px-3 py-2 text-white bg-red-600 hover:bg-red-500 font-medium text-sm cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10 text-gray-500">No products found. Add your first product!</p>
    <% end %>
  </div>
</div>
