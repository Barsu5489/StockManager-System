<div id="low-stock-alert">
  <% if low_stock_products.any? %>
    <div class="bg-amber-50 border border-amber-200 rounded-lg p-4 mb-6">
      <div class="flex items-center">
        <span class="text-amber-600 text-xl mr-2">âš </span>
        <div>
          <h3 class="font-semibold text-amber-800">Low Stock Alert</h3>
          <p class="text-amber-700 text-sm">
            <%= low_stock_products.count %> product(s) below threshold (<%= Product::LOW_STOCK_THRESHOLD %> units):
            <strong><%= low_stock_products.pluck(:name).join(", ") %></strong>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>
