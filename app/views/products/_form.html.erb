<%= form_with(model: product, class: "space-y-6") do |form| %>
  <% if product.errors.any? %>
    <div class="bg-accent-red/10 border-l-4 border-accent-red p-4 rounded-lg">
      <h2 class="font-semibold text-accent-red"><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul class="list-disc ml-6 mt-2 text-accent-red/80 text-sm">
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, class: "block text-sm font-medium text-text-primary mb-2" %>
    <%= form.text_field :name, class: "w-full px-4 py-3 bg-dark-700 border border-dark-600 rounded-lg text-text-primary placeholder-text-secondary focus:outline-none focus:border-accent-blue focus:ring-1 focus:ring-accent-blue transition-colors duration-150", placeholder: "Product name" %>
  </div>

  <div>
    <%= form.label :description, class: "block text-sm font-medium text-text-primary mb-2" %>
    <%= form.textarea :description, rows: 4, class: "w-full px-4 py-3 bg-dark-700 border border-dark-600 rounded-lg text-text-primary placeholder-text-secondary focus:outline-none focus:border-accent-blue focus:ring-1 focus:ring-accent-blue transition-colors duration-150 resize-none", placeholder: "Product description (optional)" %>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
    <div>
      <%= form.label :price, class: "block text-sm font-medium text-text-primary mb-2" %>
      <div class="relative">
        <span class="absolute left-4 top-1/2 -translate-y-1/2 text-text-secondary">$</span>
        <%= form.text_field :price, class: "w-full pl-8 pr-4 py-3 bg-dark-700 border border-dark-600 rounded-lg text-text-primary placeholder-text-secondary focus:outline-none focus:border-accent-blue focus:ring-1 focus:ring-accent-blue transition-colors duration-150", placeholder: "0.00" %>
      </div>
    </div>

    <div>
      <%= form.label :quantity, class: "block text-sm font-medium text-text-primary mb-2" %>
      <%= form.number_field :quantity, class: "w-full px-4 py-3 bg-dark-700 border border-dark-600 rounded-lg text-text-primary placeholder-text-secondary focus:outline-none focus:border-accent-blue focus:ring-1 focus:ring-accent-blue transition-colors duration-150", placeholder: "0", min: 0 %>
    </div>
  </div>

  <div>
    <%= form.label :image, class: "block text-sm font-medium text-text-primary mb-2" %>
    <% if product.image.attached? %>
      <div class="mb-3 flex items-center gap-4">
        <%= image_tag product.image, class: "w-20 h-20 object-cover rounded-lg border border-dark-600" %>
        <span class="text-sm text-text-secondary">Current image</span>
      </div>
    <% end %>
    <div class="relative">
      <%= form.file_field :image, accept: "image/*", class: "w-full px-4 py-3 bg-dark-700 border border-dark-600 rounded-lg text-text-primary file:mr-4 file:py-2 file:px-4 file:border-0 file:rounded-md file:bg-dark-600 file:text-text-primary file:font-medium file:cursor-pointer hover:file:bg-dark-500 transition-colors duration-150" %>
    </div>
  </div>

  <div class="flex items-center gap-4 pt-4 border-t border-dark-600">
    <%= form.submit class: "px-6 py-3 bg-accent-blue hover:bg-accent-blue-hover rounded-lg text-white font-medium cursor-pointer transition-colors duration-150" %>
    <%= link_to "Cancel", products_path, class: "px-6 py-3 bg-transparent hover:bg-dark-700 border border-dark-600 rounded-lg text-text-secondary hover:text-text-primary font-medium transition-colors duration-150" %>
  </div>
<% end %>
