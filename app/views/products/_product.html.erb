<tr id="<%= dom_id product %>" class="hover:bg-dark-700/50 transition-colors duration-150">
  <!-- Product Info -->
  <td class="px-6 py-4">
    <div class="flex items-center gap-4">
      <div class="w-12 h-12 bg-dark-700 rounded-lg overflow-hidden flex-shrink-0">
        <% if product.image.attached? %>
          <%= image_tag product.image, class: "w-full h-full object-cover" %>
        <% else %>
          <div class="w-full h-full flex items-center justify-center text-text-secondary">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
          </div>
        <% end %>
      </div>
      <div class="min-w-0">
        <p class="font-medium text-text-primary truncate"><%= product.name %></p>
        <p class="text-sm text-text-secondary truncate max-w-xs"><%= product.description.presence || "No description" %></p>
      </div>
    </div>
  </td>

  <!-- Price -->
  <td class="px-6 py-4">
    <span class="font-semibold text-text-primary"><%= number_to_currency(product.price) %></span>
  </td>

  <!-- Quantity with Controls -->
  <td class="px-6 py-4">
    <div class="flex items-center gap-2">
      <%= button_to decrease_stock_product_path(product), method: :post, class: "w-7 h-7 flex items-center justify-center bg-dark-700 hover:bg-dark-600 border border-dark-600 rounded-md text-text-secondary hover:text-text-primary cursor-pointer transition-colors duration-150 disabled:opacity-50 disabled:cursor-not-allowed", disabled: product.quantity == 0 do %>
        <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"/>
        </svg>
      <% end %>

      <span class="w-10 text-center font-semibold <%= product.low_stock? ? 'text-accent-amber' : 'text-text-primary' %>">
        <%= product.quantity %>
      </span>

      <%= button_to increase_stock_product_path(product), method: :post, class: "w-7 h-7 flex items-center justify-center bg-dark-700 hover:bg-dark-600 border border-dark-600 rounded-md text-text-secondary hover:text-text-primary cursor-pointer transition-colors duration-150" do %>
        <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
      <% end %>
    </div>
  </td>

  <!-- Status -->
  <td class="px-6 py-4">
    <% if product.quantity == 0 %>
      <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-accent-red/10 text-accent-red">
        Out of Stock
      </span>
    <% elsif product.low_stock? %>
      <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-accent-amber/10 text-accent-amber">
        Low Stock
      </span>
    <% else %>
      <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-accent-green/10 text-accent-green">
        In Stock
      </span>
    <% end %>
  </td>

  <!-- Value -->
  <td class="px-6 py-4">
    <span class="font-medium text-text-primary"><%= number_to_currency(product.price * product.quantity) %></span>
  </td>

  <!-- Actions -->
  <td class="px-6 py-4 text-right">
    <div class="flex items-center justify-end gap-1">
<%= link_to edit_product_path(product), class: "p-2 text-text-secondary hover:text-accent-blue hover:bg-dark-700 rounded-lg transition-colors duration-150", title: "Edit" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
      <% end %>
      <%= button_to product, method: :delete, class: "p-2 text-text-secondary hover:text-accent-red hover:bg-dark-700 rounded-lg cursor-pointer transition-colors duration-150", data: { turbo_confirm: "Are you sure you want to delete #{product.name}?" }, title: "Delete" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
        </svg>
      <% end %>
    </div>
  </td>
</tr>
