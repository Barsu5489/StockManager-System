<div id="stats-cards" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
  <!-- Total Products -->
  <div class="bg-dark-800 border border-dark-600 rounded-xl p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-text-secondary text-sm font-medium">Total Products</p>
        <p class="text-3xl font-bold text-text-primary mt-1"><%= total_products %></p>
      </div>
      <div class="w-12 h-12 bg-accent-blue/10 rounded-xl flex items-center justify-center">
        <svg class="w-6 h-6 text-accent-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
        </svg>
      </div>
    </div>
  </div>

  <!-- Total Value -->
  <div class="bg-dark-800 border border-dark-600 rounded-xl p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-text-secondary text-sm font-medium">Total Value</p>
        <p class="text-3xl font-bold text-text-primary mt-1"><%= number_to_currency(total_value) %></p>
      </div>
      <div class="w-12 h-12 bg-accent-green/10 rounded-xl flex items-center justify-center">
        <svg class="w-6 h-6 text-accent-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </div>
    </div>
  </div>

  <!-- In Stock -->
  <div class="bg-dark-800 border border-dark-600 rounded-xl p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-text-secondary text-sm font-medium">In Stock</p>
        <p class="text-3xl font-bold text-accent-green mt-1"><%= in_stock_count %></p>
      </div>
      <div class="w-12 h-12 bg-accent-green/10 rounded-xl flex items-center justify-center">
        <svg class="w-6 h-6 text-accent-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </div>
    </div>
  </div>

  <!-- Low Stock -->
  <div class="bg-dark-800 border border-dark-600 rounded-xl p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-text-secondary text-sm font-medium">Low Stock</p>
        <p class="text-3xl font-bold text-accent-amber mt-1"><%= low_stock_count %></p>
      </div>
      <div class="w-12 h-12 bg-accent-amber/10 rounded-xl flex items-center justify-center">
        <svg class="w-6 h-6 text-accent-amber" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
        </svg>
      </div>
    </div>
  </div>
</div>
