<% content_for :title, "New product" %>

<div class="max-w-2xl">
  <div class="mb-6">
    <%= link_to products_path, class: "inline-flex items-center gap-2 text-text-secondary hover:text-text-primary transition-colors duration-150" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
      Back to inventory
    <% end %>
  </div>

  <div class="bg-dark-800 border border-dark-600 rounded-xl p-6">
    <h1 class="font-bold text-2xl text-text-primary mb-6">Add New Product</h1>
    <%= render "form", product: @product %>
  </div>
</div>
